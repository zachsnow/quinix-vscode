{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Quinix Lowlevel Language",
  "patterns": [
    {
      "include": "#tags"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#storage"
    },
    {
      "include": "#values"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [{
        "name": "comment.line.qll",
        "begin": "//",
        "end": "\\n"
      }]
    },
    "storage": {
      "patterns": [{
        "name": "storage.type.qll",
        "match": "\\b(struct|void|byte|bool|string)\\b"
      }]
    },
    "values": {
      "patterns": [{
        "name": "constant.language.qll",
        "match": "\\b(null|true|false)\\b"
      }]
    },
    "tags": {
      "patterns": [{
        "name": "entity.other.attribute-name.qll",
        "match": "\\.[a-z]+"
      }]
    },
    "operators": {
      "patterns": [{
        "name": "keyword.operator.qll",
        "match": "->"
      },{
        "name": "keyword.control.qll",
        "match": "\\b(new|delete|len|cap|sizeof)\\b"
      }]
    },
    "keywords": {
      "patterns": [{
        "name": "keyword.control.qll",
        "match": "\\b(var|namespace|using|function|global|type|if|else|while|for|return|break|unsafe)\\b"
      }]
    },
    "strings": {
      "patterns": [{
        "name": "string.quoted.single.qll",
        "begin": "'",
        "end": "'",
        "patterns": [{
          "name": "constant.character.escape.qll",
          "match": "\\\\[\\\\'\"n]"
        }]
      },{
        "name": "string.quoted.double.qll",
        "begin": "\"",
        "end": "\"",
        "patterns": [{
          "name": "constant.character.escape.qll",
          "match": "\\\\[\\\\'\"n]"
        }]
      }]
    },
    "numbers": {
      "patterns": [{
        "name": "constant.numeric.hexadecimal.qll",
        "match": "\\b(-?0x[0-9a-fA-F]+)\\b"
      },{
        "name": "constant.numeric.binary.qll",
        "match": "\\b(-?0b[01]+)\\b"
      },{
        "name": "constant.numeric.qll",
        "match": "\\b(-?[0-9]+)\\b"
      }]
    }
  },
  "scopeName": "source.qll"
}
